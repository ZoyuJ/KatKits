{
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "commonjs",
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "outDir": "./bin",
    "strict": true,
    "declaration": true,
    "allowJs": true,
    "lib": [ "ES2015" ]
  },
  "exclude": [
    "node_modules",
    "lib",
    "bin"
  ]
}
